<section id="Experiences">
  <div class="container">
    <h1 class="center">Experiences</h1>
    <p class="center">
      <br>
    </p>
    <hr>
    <h2><i class="fa fa-graduation-cap">&nbsp;Education</i></h2>
    <br>
    <% @educations.each do |education| %>
        <div class="experiences">
          <div class="experience row">
            <div class="col-md-4">
              <h4><%= education.title %></h4>
              <p class="experience-period">
                <%= education.start.year.to_s + '-' +
                        if education.currently
                          'current'
                        else
                          education.finish.year.to_s
                        end %>
              </p>
              <span class="location">
                    <span class="glyphicon glyphicon-map-marker"></span>
                <%= education.location %>
                  </span>
            </div>
            <div class="col-md-8">
              <p>
                <strong><%= education.degree %></strong>
                <br><br>
				        <span class="experience-details">
                  <%= education.description %>  
                </span>
              </p>
            </div>
          </div>
        </div>
        <br>
    <% end %>
    <h2><i class="fa fa-briefcase">&nbsp;Career</i></h2>
    <br>
    <% @works.each do |work| %>
        <div class="experiences">
          <div class="experience row">
            <div class="col-md-4">
              <h4><%= work.title %></h4>
              <p class="experience-period">
                <%= work.start.strftime("%B") + " " + work.start.year.to_s + ' - ' +
                        if work.currently
                          'current'
                        else
                          work.finish.strftime("%B") + " " + work.finish.year.to_s
                        end %>
              </p>
               <span class="location">
                    <span class="glyphicon glyphicon-map-marker"></span>
                 <%= work.location %>
                 <br>
                 <% if work.link != '' %>
                   <i class="fa fa-link"><a href="<%= work.link %>">&nbsp;<%= work.title %></a></i>
                   <% end %>
                </span>
            </div>
            <div class="col-md-8">
              <p>
                <strong><%= work.role %></strong><br><br>
				        <span class="experience-details">
					       <%= work.description %>
				        </span>
              </p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</section><!--/#portfolio-->


